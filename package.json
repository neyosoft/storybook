{
  "name": "care-professional",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "lint": "eslint .",
    "start": "react-native start",
    "test": "jest",
    "android:stage": "ENVFILE=.env.staging react-native run-android",
    "android:prod": "ENVFILE=.env.production react-native run-android",
    "android:debug:asset": "npx react-native bundle --dev false --platform android --entry-file index.js --bundle-output ./android/app/src/main/assets/index.android.bundle --assets-dest ./android/app/src/main/res",
    "android:build:debug": "yarn android:debug:asset && cd android && ENVFILE=.env.staging ./gradlew assembleDebug",
    "android:build:simulate": "yarn android:debug:asset && cd android && ENVFILE=.env.production ./gradlew assembleDebug",
    "android:dev": "ENVFILE=.env.dev react-native run-android",
    "android:build:release": "cd android && ENVFILE=.env.production ./gradlew assembleRelease",
    "android:bundle:release": "cd android && ENVFILE=.env.production ./gradlew bundleRelease",
    "android-apk:staging": "cd android && ./gradlew assembleStagingRelease",
    "android-bundle-fast": "cd android && ./gradlew bundleRelease",
    "clean": "watchman watch-del-all && rm -rf node_modules && rm -rf $TMPDIR/metro-* && rm -rf $TMPDIR/haste-map-* && yarn && yarn start --reset-cache",
    "ios:dev": "npx react-native run-ios --scheme \"CareItator (dev)\"",
    "ios:stage": "npx react-native run-ios --scheme \"CareItator (staging)\"",
    "ios:prod": "npx react-native run-ios --scheme \"CareItator (production)\""
  },
  "dependencies": {
    "react": "18.2.0",
    "react-native": "0.72.3",
    "react-native-config": "^1.5.1"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@react-native/eslint-config": "^0.72.2",
    "@react-native/metro-config": "^0.72.9",
    "@tsconfig/react-native": "^3.0.0",
    "@types/react": "^18.0.24",
    "@types/react-test-renderer": "^18.0.0",
    "babel-jest": "^29.2.1",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^8.19.0",
    "jest": "^29.2.1",
    "metro-react-native-babel-preset": "0.76.7",
    "prettier": "^2.4.1",
    "react-test-renderer": "18.2.0",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=16"
  }
}
